@model HospitalManagementMVC.Models.PatientRegistration

@{
    ViewData["Title"] = "Patient";
}

<h1>Patient Login</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Patient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId"  class="control-label"></label>
                <input asp-for="PatientId" class="form-control" />
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                <p>New User? <button type="button"><a  asp-controller="Register" asp-action="PatientRegistration">Patient Registration</a></button></p>
            </div>
        </form>
    </div>
</div>


